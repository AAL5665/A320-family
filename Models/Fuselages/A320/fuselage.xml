	<!-- Animations -->
	
	<!-- Belly -->
	
	<!-- Ram Air Turbine -->
	<animation>
		<name>RAT Door left</name>
		<type>rotate</type>
		<object-name>RatDoorL</object-name>
		<object-name>RatDoorL.Inner</object-name>
		<property>systems/hydraulic/sources/rat/door-position</property>
		<factor>-105</factor>
		<axis>
			<x1-m>-3.55938</x1-m>
			<y1-m>-1.75372</y1-m>
			<z1-m>-2.21517</z1-m>
			<x2-m>-2.56435</x2-m>
			<y2-m>-1.75542</y2-m>
			<z2-m>-2.20495</z2-m>
		</axis>
	</animation>
	
	<animation>
		<name>RAT Door right</name>
		<type>rotate</type>
		<object-name>RatDoorR</object-name>
		<object-name>RatDoorR.Inner</object-name>
		<property>systems/hydraulic/sources/rat/door-position</property>
		<factor>135</factor>
		<axis>
			<x1-m>-3.55938</x1-m>
			<y1-m>-1.53239</y1-m>
			<z1-m>-2.3598</z1-m>
			<x2-m>-2.56435</x2-m>
			<y2-m>-1.53327</y2-m>
			<z2-m>-2.35378</z2-m>
		</axis>
	</animation>
	
	<animation>
		<name>RAT Deploy</name>
		<type>rotate</type>
		<object-name>RatSpinner</object-name>
		<object-name>Rat</object-name>
		<property>systems/hydraulic/sources/rat/arm-position</property>
		<factor>-90</factor>
		<offset-deg>90</offset-deg>
		<axis>
			<x1-m>-2.58751</x1-m>
			<y1-m>-1.68915</y1-m>
			<z1-m>-2.20464</z1-m>
			<x2-m>-2.58751</x2-m>
			<y2-m>-1.59255</y2-m>
			<z2-m>-2.23052</z2-m>
		</axis>
	</animation>
	
	<animation>
		<name>RAT Spin</name>
		<type>spin</type>
		<object-name>RatSpinner</object-name>
		<property>systems/hydraulic/sources/rat/rat-speed-rpm</property>
		<condition>
			<greater-than>
				<property>systems/hydraulic/sources/rat/arm-position</property>
				<value>0.8</value>
			</greater-than>
		</condition>
		<center>
			<x-m>-2.78737</x-m>
			<y-m>-1.7928</y-m>
			<z-m>-2.78465</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
